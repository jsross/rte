{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "esnext",
    "removeComments": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]  
}